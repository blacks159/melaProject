<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- bootstrap4.5.0 CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <!-- JQ 3.5.1 CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- 引用文字檔 -->
    <link rel="stylesheet" href="/stylesheets/font/jf-openhuninn-1.1.ttf">
    <!-- 引用CSS -->
    <link rel="stylesheet" href="/stylesheets/MelaStyle.css">
    <link rel="stylesheet" href="/stylesheets/backend.css">
</head>

<body>
    <!-- navbar -->
    <nav>
        <div class="row">
            <div class="col-1"></div>
            <div class="col-2">
                <h1>Mela</h1>
            </div>
            <div class="col-5   ">
                <h1>後台管理系統</h1>
            </div>
            <div class="col-3 d-flex flex-row-reverse"><img src="/images/settings.svg" alt=""></div>
        </div>
    </nav>
    <br>
    <br>
    <!-- body主架構 -->
    <div class="row">
        <div class="col-1"></div>
        <!-- slider start -->
        <div class="col-2 ">
            <div class="slider">
                <div class="sliderStyle">
                    <h5 class="">Hello!陳先生</h5>
                    <h5 class="">blackss</h5>
                    <hr>
                    <div class="memberSlider">
                        <a href="./member_myedit.html javascript:; ">
                            <h5>會員資料
                            </h5>
                        </a>
                    </div>
                    <div class="eventSlider">
                        <a href="./member_activity.html javascript:; ">
                            <h5>活動資訊</h5>
                        </a>
                    </div>
                    <div class="orderSlider">
                        <a href="./member_myorder.html javascript:; ">
                            <h5>方案資訊</h5>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- main contentstart -->
        <div class="col-8">
            <div class="mainTop">
                <div class="checkMela"><input type="checkbox"> 選取全部</div>
                <div><button class="neMela" data-toggle="modal" data-target="#AddModal" >新增</button></div>
                <div><button class="deMela">刪除</button></div>
                <div> </div>
            </div>
            <br>
            <div class="row">

                <table class="melaTable table col-12 table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>
                                <h5>會員ID</h5>
                            </th>
                            <th>
                                <h5>姓名</h5>
                            </th>
                            <th>
                                <h5>聯絡方式</h5>
                            </th>                       
                            <th>
                                <h5>帳號</h5>
                            </th>
                            <th>
                                <h5>密碼</h5>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < backendMembersql.length; i++ ) { %>
                        <tr>
                            <td></td>
                            <td class="combox">
                                <div class="melaNicky">
                                    <input type="checkbox">
                                    <div><img src="/images/file.png" alt="" width="30px"></div>
                                </div>
                            </td>
                            <td><%= backendMembersql[i].mID %></td>
                            <td><%= backendMembersql[i].mName %></td>
                            <td><%= backendMembersql[i].mPhone %></td>
                            <td><%= backendMembersql[i].mAccount %></td>
                            <td><%= backendMembersql[i].mPass %></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- main content -->
    </div>
    <!-- slider end -->



    <div class="modal fade" id="AddModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>





    <script>
        // 選取全部
        $('.checkMela').click(function () {
        })
        console.log('.checkMela');

        //slider 目前位置樣式

    </script>
</body>

</html>