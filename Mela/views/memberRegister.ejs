    <title>會員登入註冊</title>
</head>

<body>
    <!-- 導覽列 -->
    <!-- header -->
    <%- include('./share/navigation') -%>
    <div class="board">
        <div class="draw">
            <div class="change">
                <a href="/users/memberLogin" class="left" style="text-decoration: none;">
                    <div id="Left">
                        <h3>登入</h3>
                    </div>
                </a>
                <a href="/users/memberRegister" class="right" style="text-decoration: none;">
                    <div id="Right">
                        <h3>註冊</h3>
                    </div>
                </a>
            </div>

            <!-- 註冊start -->
            <!-- A設置開關 -->
            <form class="inPut2" id="content2" action="" method="POST">
                <br>
                <div class="signIn">
                    <div>
                        <h4>姓名</h4><input type="text" placeholder="Ex:王曉明" name="userName" id="userName" required>
                    </div>
                    <div>
                        <h4>手機</h4><input type="text" placeholder="Ex:0912-345678" name="userPhone" id="userPhone"
                            required>
                    </div>
                    <div>
                        <h4>帳號</h4><input type="text" placeholder="Ex:123@gmail.com" name="useraccount" id="useraccount"
                            required>
                    </div>
                    <div>
                        <h4>密碼</h4><input type="password" placeholder="請輸入密碼(6-10位英數字)" name="userpwd" id="userpwd"
                            required>
                    </div>
                    <br>
                    <div class="chose">
                        <input class="btnMela" type="submit" value="註冊" id="btnReg" name="btnReg">
                    </div>
                </div>
            </form>
            <!-- 註冊end -->

        </div>

    </div>

    <div class="footer">

    </div>


    <script>
        // JQ更改樣式(前)
        $('.inPut').show();
        $('.draw').css('height', '64vh');
        $('.left').css('border-bottom-style', 'solid');
        $('.right').css('border-bottom-style', 'none');
        // btn事件(後)
        $("#btnReg").click(function () {
            var newItem = {
                userName: $("#userName").val(),
                userPhone: $("#userPhone").val(),
                useraccount: $("#useraccount").val(),
                userpwd: $("#userpwd").val(),
            }
            $.ajax({
                type: "post",
                url: "/memberRegister",
                dataType: "json",
                data: newItem
            })
            $.get("/memberRegister", function (e) {
                newsList = JSON.parse(e);
            })
            
        })
    </script>

</body>

